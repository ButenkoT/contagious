		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="three" data-level-number="3"></input>
		
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="four" data-level-number="4"></input>
		
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="five" data-level-number="5"></input>
		
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="six" data-level-number="6"></input>
		
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="seven" data-level-number="7"></input>
		
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="eight" data-level-number="8"></input>
	
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="nine" data-level-number="9"></input>
	
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="ten" data-level-number="10"></input>
		
	</div>

	<!-- Health bar -->

	<div class="health_bar">
		<div class="health_bar_background">
		</div>
		<canvas id="my_canvas" width="190" height="100"></canvas>
	
	</div>

	<!-- Virus icon -->
	<img src="/assets/ebola_germ_200x200.svg" id="virus_image" alt="Virus-Image">

	<!-- Arrow icon -->
	<div src="/assets/images/arrow-image.svg" id="click_me_arrow">
	  image-arrow
	</div>

</div>


<!-- LEVEL WELCOME POPUP - needs to be called on click on level button -->


<div id="launch_level" class="white-popup mfp-hide">

</div>

<script type="template/handlebars" id="launchLevelTemplate" >
		<h2>Welcome to level {{currentLevel}}!</h2>
		<h3 class="popup">Instructions: </h3>
  		<p class="popup">There are no specific instructions for thislevel</p>
  		<button class="launch_level_popup" data-level-number={{currentLevel}}>Start level</button>
</script>



<!-- GAME BOARD - needs to be called on click of "start level" button in level launch light box -->
<div class="game-page">
	<div class="game-board"></div>

	<script type="template/handlebars" id="gameTemplate" >

	  <div class="board-cell" data-type="{{cellType}}">
	    {{type}}
	    <span class="coord"><i class="cell-x">0</i>, <i class="cell-y">0</i></span>
	  </div>

	</script>
</div>
