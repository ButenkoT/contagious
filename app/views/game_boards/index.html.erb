	<div class="person_button_container">

		<!-- Person image -->
		<img src="/assets/contagious_body_white.svg" id="person_image" alt="Person-Image">

		<!-- 10 level links -->
		<input type="image" src="/assets/contagious_crosshairs_40x40.svg" href="#launch_level" class="level_link" id="one" data-level-number="1"></input>
		
